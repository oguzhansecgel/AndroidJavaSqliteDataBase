<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sehirilcesecim"
        android:background="@color/background"
>


    <Spinner
            android:layout_width="262dp"
            android:layout_height="29dp" android:id="@+id/ilceSpinner"
            android:layout_marginLeft="44dp" android:layout_marginStart="44dp"
            app:layout_constraintStart_toEndOf="@+id/sorguİlce" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/ilSpinner"/>
    <Spinner

            android:layout_width="262dp"
            android:layout_height="29dp" android:id="@+id/ilSpinner"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp" android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp" app:layout_constraintStart_toEndOf="@+id/sorguİl"/>
    <TextView
            android:text="İl"
            android:fontFamily="@font/barlowbold"
            android:textColor="@color/textDarkColor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sorguİl"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"/>
    <TextView
            android:text="İlçe"
            android:fontFamily="@font/barlowbold"
            android:textColor="@color/textDarkColor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="34dp"
            android:layout_height="34dp" android:id="@+id/sorguİlce"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="62dp" app:layout_constraintTop_toBottomOf="@+id/sorguİl"/>
    <Button
            android:text="Nöbetçi Eczane Bul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bulBtn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="29dp" app:layout_constraintTop_toBottomOf="@+id/ilceSpinner"/>
    <WebView
            android:id="@+id/eczaneView"
            android:layout_width="403dp"
            android:layout_height="442dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp" android:layout_marginRight="1dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="279dp"
            android:layout_height="55dp" app:srcCompat="@drawable/nobeczane" android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="66dp" android:layout_marginStart="66dp" android:layout_marginEnd="66dp"
            android:layout_marginRight="66dp" app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>