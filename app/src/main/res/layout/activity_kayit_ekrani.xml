<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KayitEkrani"
    android:background="@drawable/background"
    android:gravity="center"

    android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"

        >

            <TextView
                android:id="@+id/tv_Ad"
                android:fontFamily="@font/barlowbold"
                android:textColor="@color/textDarkColor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adınız " />

            <EditText
                    android:id="@+id/kayitIsim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

            />

        </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
            >

        <TextView
                android:fontFamily="@font/barlowbold"
                android:textColor="@color/textDarkColor"
                android:textSize="20sp"
                android:textStyle="bold"
            android:id="@+id/tv_kullanici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Adınız  " />

        <EditText
                android:id="@+id/kayitKad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

        >

            <TextView
                    android:fontFamily="@font/barlowbold"
                    android:textColor="@color/textDarkColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingRight="15dp"
                android:id="@+id/tv_sifre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Şifreniz " />

            <EditText
                    android:id="@+id/kayitSifre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                    android:fontFamily="@font/barlowbold"
                    android:textColor="@color/textDarkColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                android:id="@+id/tv_DogumYeri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doğum Yeri " />

            <Spinner
                android:id="@+id/spinnerIl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RadioGroup
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        android:gravity="center"
        >

            <RadioButton
                    android:fontFamily="@font/barlowbold"
                    android:textColor="@color/textDarkColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                android:id="@+id/rb_Erkek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erkek" />

            <RadioButton
                    android:fontFamily="@font/barlowbold"
                    android:textColor="@color/textDarkColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                android:id="@+id/rb_Kadin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kadın" />

        </RadioGroup>

        <CheckBox
                android:gravity="center"
                android:fontFamily="@font/barlowbold"
                android:textColor="@color/textDarkColor"
                android:textSize="20sp"
                android:padding="10dp"
            android:id="@+id/cb_Checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Sözleşmesini Kabul Ediyorum." />


        <Button
                android:id="@+id/kayitBtn"
                android:background="@drawable/buttontema"
                android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Kayıt Ol" />
    <ImageView
            android:layout_width="58dp"
            android:layout_height="64dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView3"/>

</LinearLayout>





