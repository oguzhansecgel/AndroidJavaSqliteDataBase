<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_KullaniciAdi"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Adı  "
            android:fontFamily="@font/barlowbold"
            android:textSize="20sp"
            android:textColor="@color/textDarkColor"
             />

        <EditText
            android:id="@+id/et_KullaniciAdi"
            android:layout_width="150dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_Sifre"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Şifre  "
            android:fontFamily="@font/barlowbold"
            android:textSize="20sp"
            android:textColor="@color/textDarkColor"
            />

        <EditText
            android:id="@+id/et_Sifre"
            android:layout_width="150dp"
            android:layout_height="40dp"
             />

    </LinearLayout>

    <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_marginTop="50dp"
            >

        <Button
                android:id="@+id/btn_Giris"
                android:background="@drawable/buttontema"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giriş"
                android:layout_marginBottom="20dp"
        />


        <Button
                android:id="@+id/girisBtnKayıt"
                android:background="@drawable/buttontema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hesabın Yok mu ? Hemen Kayıt Ol"

                android:textColor="@color/white"
                android:padding="15dp"
                android:layout_marginBottom="20dp"/>
        <Button
                android:id="@+id/girisKayitSorgula"
                android:background="@drawable/buttontema"
                android:textColor="@color/white"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kayıt Sorgula"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
    >
        <ImageView
                android:layout_width="72dp"
                android:layout_height="75dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView2"/>

    </LinearLayout>
</LinearLayout>
