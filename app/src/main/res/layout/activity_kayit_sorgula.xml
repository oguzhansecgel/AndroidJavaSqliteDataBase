<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KayitSorgula"
        android:background="@color/background"
>

    <TextView
            android:fontFamily="@font/barlowbold"
            android:textSize="20sp"
            android:text="Adınız "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_sorguKadi"
            android:textColor="@color/textDarkColor"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="85dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <EditText
            android:id="@+id/sorguEt"
            android:layout_width="198dp" android:layout_height="47dp"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/tv_sorguKadi"
            android:layout_marginTop="73dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button
            android:background="@drawable/buttontema"
            android:textColor="@color/white"
            android:text="Sorgula"
            android:layout_width="80dp"
            android:layout_height="43dp" android:id="@+id/btn_kayitSorgu"
            android:layout_marginEnd="160dp" android:layout_marginRight="160dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="157dp" android:layout_marginStart="157dp"
            app:layout_constraintHorizontal_bias="0.714"
            app:layout_constraintTop_toBottomOf="@+id/sorguEt" android:layout_marginTop="52dp"/>
    <ListView
            android:id="@+id/kayitSorgulaList"
            android:layout_width="402dp"
            android:layout_height="412dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_kayitSorgu" android:layout_marginTop="116dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="101dp"
            android:layout_height="70dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="149dp" android:layout_marginRight="149dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="149dp" android:layout_marginStart="149dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>